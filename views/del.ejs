      if(!confirm(msg)) return;

      try{
        // g·ªçi API delete
        const qs = new URLSearchParams({ from, to, note }).toString();
        const resp = await fetch(`/del?${qs}`, { method: "POST" });

        const text = await resp.text();
        let data = null;
        try { data = JSON.parse(text); } catch(e){}

        if(!resp.ok){
          showResult(`‚ùå L·ªói: <b>${data?.message || text}</b>`, false);
          return;
        }

        showResult(
          `‚úÖ ƒê√£ x√≥a th√†nh c√¥ng!<br/>
           - T·ª´: <b>${data.from}</b> ‚Üí ƒë·∫øn: <b>${data.to}</b><br/>
           - ƒê√£ x√≥a CdKwhCa: <b>${data.deleted?.CdKwhCa ?? 0}</b><br/>
           - ƒê√£ x√≥a DataBNSA51KwhDay: <b>${data.deleted?.DataBNSA51KwhDay ?? 0}</b><br/>
           `,
          true
